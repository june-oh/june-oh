---
import { siteConfig } from "../config";
const hasProjects = siteConfig.projects && siteConfig.projects.length > 0;
---

{
  hasProjects && (
    <section id="projects" class="p-8 sm:p-12 md:p-16 lg:p-24 bg-gray-50 dark:bg-slate-800">
      <div>
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
          <div class="lg:col-span-4">
            <h2 class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold text-gray-900 dark:text-gray-100">
              Research Projects
            </h2>
            <div
              class="w-[75px] h-[5px] mt-2 rounded-full"
              style={`background-color: ${siteConfig.accentColor}`}
            />
          </div>

          <div class="lg:col-span-8">
            <div class="space-y-6">
              {siteConfig.projects.map((project, index) => (
                <div class="relative p-4 sm:p-6 md:p-8 bg-white dark:bg-slate-900 rounded-xl sm:rounded-2xl border border-gray-200 dark:border-slate-700 hover:shadow-lg dark:hover:shadow-slate-900/50 hover:border-gray-300 dark:hover:border-slate-600 transition-all duration-300">
                  <div class="space-y-4">
                    <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between gap-2">
                      <div>
                        <span
                          class="text-sm font-mono"
                          style={{ color: siteConfig.accentColor }}
                        >
                          0{index + 1}
                        </span>
                        <h3 class="text-xl sm:text-2xl font-bold text-gray-900 dark:text-gray-100 mt-1">
                          {project.name}
                        </h3>
                      </div>
                      {project.period && (
                        <span class="text-sm text-gray-500 dark:text-gray-400 whitespace-nowrap">
                          {project.period}
                        </span>
                      )}
                    </div>

                    {project.partner && (
                      <div class="flex items-center gap-2">
                        <span class="text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wide">Partner:</span>
                        <span 
                          class="text-sm font-medium px-2 py-0.5 rounded"
                          style={`background-color: ${siteConfig.accentColor}15; color: ${siteConfig.accentColor}`}
                        >
                          {project.partner}
                        </span>
                      </div>
                    )}

                    <p class="text-base sm:text-lg text-gray-600 dark:text-gray-300 leading-relaxed">
                      {project.description}
                    </p>

                    {project.skills && project.skills.length > 0 && (
                      <div class="flex flex-wrap gap-1.5 sm:gap-2 pt-2">
                        {project.skills.map((skill) => (
                          <span class="px-2.5 sm:px-3 py-1 sm:py-1.5 bg-gray-900 dark:bg-slate-700 text-white dark:text-gray-200 rounded-md sm:rounded-lg text-xs sm:text-sm font-medium">
                            {skill}
                          </span>
                        ))}
                      </div>
                    )}
                  </div>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>
  )
}
