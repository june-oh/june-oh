---
import { siteConfig } from "../config";
const hasAwards = siteConfig.awards && siteConfig.awards.length > 0;
const hasPatents = siteConfig.patents && siteConfig.patents.length > 0;
const hasCertificates = siteConfig.certificates && siteConfig.certificates.length > 0;
const hasContent = hasAwards || hasPatents || hasCertificates;
---

{
  hasContent && (
    <section id="awards" class="p-8 sm:p-12 md:p-16 lg:p-24 bg-gray-50 dark:bg-slate-800">
      <div>
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
          <div class="lg:col-span-4">
            <h2 class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold text-gray-900 dark:text-gray-100">
              Achievements
            </h2>
            <div
              class="w-[75px] h-[5px] mt-2 rounded-full"
              style={`background-color: ${siteConfig.accentColor}`}
            />
          </div>

          <div class="lg:col-span-8 space-y-8">
            {/* Awards Section */}
            {hasAwards && (
              <div>
                <h3 class="text-xl sm:text-2xl font-semibold text-gray-900 dark:text-gray-100 mb-4 flex items-center">
                  <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 mr-2" style={`color: ${siteConfig.accentColor}`} viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <circle cx="12" cy="8" r="6"/>
                    <path d="M15.477 12.89 17 22l-5-3-5 3 1.523-9.11"/>
                  </svg>
                  Awards
                </h3>
                <div class="space-y-4">
                  {siteConfig.awards.map((award) => (
                    <div class="bg-white dark:bg-slate-900 rounded-lg shadow-sm border border-gray-100 dark:border-slate-700 p-5 hover:shadow-md dark:hover:shadow-slate-900/50 transition-shadow duration-300">
                      <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between gap-2 mb-3">
                        <div>
                          <span 
                            class="inline-block px-2 py-0.5 text-xs font-bold rounded mr-2"
                            style={`background-color: ${siteConfig.accentColor}; color: white`}
                          >
                            {award.award}
                          </span>
                          <span class="text-xs text-gray-500 dark:text-gray-400">{award.year}</span>
                        </div>
                      </div>
                      <h4 class="text-base sm:text-lg font-semibold text-gray-900 dark:text-gray-100 mb-1">
                        {award.competition}
                      </h4>
                      <p class="text-sm text-gray-600 dark:text-gray-400 mb-2">{award.track}</p>
                      <div class="flex flex-wrap gap-2 text-xs text-gray-500 dark:text-gray-400">
                        <span class="flex items-center">
                          <svg xmlns="http://www.w3.org/2000/svg" class="w-3 h-3 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                          </svg>
                          Team '{award.team}': {award.members}
                        </span>
                      </div>
                      <p class="text-xs text-gray-400 dark:text-gray-500 mt-2">주관: {award.organizer}</p>
                    </div>
                  ))}
                </div>
              </div>
            )}

            {/* Patents Section */}
            {hasPatents && (
              <div>
                <h3 class="text-xl sm:text-2xl font-semibold text-gray-900 dark:text-gray-100 mb-4 flex items-center">
                  <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 mr-2" style={`color: ${siteConfig.accentColor}`} viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M15 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7Z"/>
                    <path d="M14 2v4a2 2 0 0 0 2 2h4"/>
                    <path d="M10 12h4"/>
                    <path d="M10 16h4"/>
                  </svg>
                  Patents
                </h3>
                <div class="space-y-3">
                  {siteConfig.patents.map((patent) => (
                    <div class="bg-white dark:bg-slate-900 rounded-lg shadow-sm border border-gray-100 dark:border-slate-700 p-4 hover:shadow-md dark:hover:shadow-slate-900/50 transition-shadow duration-300">
                      <div class="flex items-start">
                        <span 
                          class="inline-block w-2 h-2 rounded-full mt-2 mr-3 flex-shrink-0"
                          style={`background-color: ${siteConfig.accentColor}`}
                        />
                        <p class="text-sm sm:text-base text-gray-700 dark:text-gray-300">{patent}</p>
                      </div>
                    </div>
                  ))}
                </div>
              </div>
            )}

            {/* Certificates Section */}
            {hasCertificates && (
              <div>
                <h3 class="text-xl sm:text-2xl font-semibold text-gray-900 dark:text-gray-100 mb-4 flex items-center">
                  <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 mr-2" style={`color: ${siteConfig.accentColor}`} viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <rect width="18" height="14" x="3" y="4" rx="2"/>
                    <path d="M8 18v2"/>
                    <path d="M16 18v2"/>
                    <path d="M12 12h.01"/>
                  </svg>
                  Certificates
                </h3>
                <div class="space-y-3">
                  {siteConfig.certificates.map((cert) => (
                    <div class="bg-white dark:bg-slate-900 rounded-lg shadow-sm border border-gray-100 dark:border-slate-700 p-4 hover:shadow-md dark:hover:shadow-slate-900/50 transition-shadow duration-300">
                      <div class="flex items-start">
                        <span 
                          class="inline-block w-2 h-2 rounded-full mt-2 mr-3 flex-shrink-0"
                          style={`background-color: ${siteConfig.accentColor}`}
                        />
                        <p class="text-sm sm:text-base text-gray-700 dark:text-gray-300">{cert}</p>
                      </div>
                    </div>
                  ))}
                </div>
              </div>
            )}
          </div>
        </div>
      </div>
    </section>
  )
}
