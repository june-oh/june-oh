---
import { siteConfig } from "../config";
const pubs = siteConfig.publications;
const hasJournals = pubs?.journals && pubs.journals.length > 0;
const hasConferences = pubs?.conferences && pubs.conferences.length > 0;
const hasDomestic = pubs?.domestic && pubs.domestic.length > 0;
const hasPublications = hasJournals || hasConferences || hasDomestic;

// Function to highlight author name
const highlightPatterns = siteConfig.authorHighlight || ["J. Oh", "오준석"];

function highlightAuthor(authors: string): string {
  let result = authors;
  for (const pattern of highlightPatterns) {
    // Use regex to match the pattern (case-sensitive)
    const regex = new RegExp(`(${pattern.replace(/[.*+?^${}()|[\]\\]/g, '\\$&')})`, 'g');
    result = result.replace(regex, '<strong class="underline">$1</strong>');
  }
  return result;
}
---

{
  hasPublications && (
    <section id="publications" class="p-8 sm:p-12 md:p-16 lg:p-24 bg-white dark:bg-slate-900">
      <div>
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
          <div class="lg:col-span-4">
            <h2 class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold text-gray-900 dark:text-gray-100">
              Publications
            </h2>
            <div
              class="w-[75px] h-[5px] mt-2 rounded-full"
              style={`background-color: ${siteConfig.accentColor}`}
            />
          </div>

          <div class="lg:col-span-8 space-y-10">
            {/* International Journals */}
            {hasJournals && (
              <div>
                <h3 class="text-xl sm:text-2xl font-serif font-bold text-gray-900 dark:text-gray-100 mb-6 pb-2 border-b-2 border-gray-300 dark:border-slate-600">
                  International Journals
                </h3>
                <ol class="space-y-5 list-none">
                  {pubs.journals.map((pub, index) => (
                    <li class="relative pl-10">
                      <span class="absolute left-0 top-0 text-gray-400 dark:text-gray-500 font-mono text-sm">
                        [{index + 1}]
                      </span>
                      <p class="text-gray-700 dark:text-gray-300 leading-relaxed">
                        <span class="text-gray-600 dark:text-gray-400" set:html={highlightAuthor(pub.authors) + ","} />
                        {" "}
                        <span class="font-semibold text-gray-900 dark:text-gray-100">"{pub.title},"</span>
                        {" "}
                        <span class="italic text-gray-700 dark:text-gray-300">{pub.venue}</span>
                        {pub.volume && <span class="text-gray-600 dark:text-gray-400">, {pub.volume}</span>}
                        <span class="text-gray-600 dark:text-gray-400">, {pub.year}.</span>
                        {pub.note && (
                          <span 
                            class="ml-2 inline-block px-2 py-0.5 text-xs font-medium rounded"
                            style={`background-color: ${siteConfig.accentColor}20; color: ${siteConfig.accentColor}`}
                          >
                            {pub.note}
                          </span>
                        )}
                      </p>
                    </li>
                  ))}
                </ol>
              </div>
            )}

            {/* International Conferences */}
            {hasConferences && (
              <div>
                <h3 class="text-xl sm:text-2xl font-serif font-bold text-gray-900 dark:text-gray-100 mb-6 pb-2 border-b-2 border-gray-300 dark:border-slate-600">
                  International Conferences
                </h3>
                <ol class="space-y-5 list-none">
                  {pubs.conferences.map((pub, index) => (
                    <li class="relative pl-10">
                      <span class="absolute left-0 top-0 text-gray-400 dark:text-gray-500 font-mono text-sm">
                        [{index + 1}]
                      </span>
                      <p class="text-gray-700 dark:text-gray-300 leading-relaxed">
                        <span class="text-gray-600 dark:text-gray-400" set:html={highlightAuthor(pub.authors) + ","} />
                        {" "}
                        <span class="font-semibold text-gray-900 dark:text-gray-100">"{pub.title},"</span>
                        {" "}
                        <span class="italic text-gray-700 dark:text-gray-300">in {pub.venue}</span>
                        {pub.volume && <span class="text-gray-600 dark:text-gray-400">, {pub.volume}</span>}
                        <span class="text-gray-600 dark:text-gray-400">, {pub.year}.</span>
                        {pub.note && (
                          <span 
                            class="ml-2 inline-block px-2 py-0.5 text-xs font-medium rounded"
                            style={`background-color: ${siteConfig.accentColor}20; color: ${siteConfig.accentColor}`}
                          >
                            {pub.note}
                          </span>
                        )}
                      </p>
                    </li>
                  ))}
                </ol>
              </div>
            )}

            {/* Domestic Journals */}
            {hasDomestic && (
              <div>
                <h3 class="text-xl sm:text-2xl font-serif font-bold text-gray-900 dark:text-gray-100 mb-6 pb-2 border-b-2 border-gray-300 dark:border-slate-600">
                  Domestic Journals
                </h3>
                <ol class="space-y-5 list-none">
                  {pubs.domestic.map((pub, index) => (
                    <li class="relative pl-10">
                      <span class="absolute left-0 top-0 text-gray-400 dark:text-gray-500 font-mono text-sm">
                        [{index + 1}]
                      </span>
                      <p class="text-gray-700 dark:text-gray-300 leading-relaxed">
                        <span class="text-gray-600 dark:text-gray-400" set:html={highlightAuthor(pub.authors) + ","} />
                        {" "}
                        <span class="font-semibold text-gray-900 dark:text-gray-100">"{pub.title},"</span>
                        {" "}
                        <span class="italic text-gray-700 dark:text-gray-300">{pub.venue}</span>
                        {pub.volume && <span class="text-gray-600 dark:text-gray-400">, {pub.volume}</span>}
                        <span class="text-gray-600 dark:text-gray-400">, {pub.year}.</span>
                        {pub.note && (
                          <span 
                            class="ml-2 inline-block px-2 py-0.5 text-xs font-medium rounded"
                            style={`background-color: ${siteConfig.accentColor}20; color: ${siteConfig.accentColor}`}
                          >
                            {pub.note}
                          </span>
                        )}
                      </p>
                    </li>
                  ))}
                </ol>
              </div>
            )}
          </div>
        </div>
      </div>
    </section>
  )
}
