---
import { siteConfig } from "../config";
const skillIconsUrl = `https://skillicons.dev/icons?i=${siteConfig.skillIcons.join(",")}&theme=dark`;
const skillIconsUrlLight = `https://skillicons.dev/icons?i=${siteConfig.skillIcons.join(",")}&theme=light`;
---

<section id="about" class="p-8 sm:p-12 md:p-16 lg:p-24 bg-white dark:bg-slate-900">
  <div>
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
      <div class="lg:col-span-4">
        <h2
          class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold text-gray-900 dark:text-gray-100"
        >
          About Me
        </h2>
        <div
          class="w-[75px] h-[5px] mt-2 rounded-full"
          style={`background-color: ${siteConfig.accentColor}`}
        >
        </div>
      </div>

      <div class="lg:col-span-8 space-y-8">
        <p class="text-lg sm:text-xl md:text-2xl leading-relaxed text-gray-600 dark:text-gray-300">
          {siteConfig.aboutMe}
        </p>

        <!-- Tech Stack Section -->
        <div class="pt-4 space-y-6">
          <h3 class="text-xl font-bold text-gray-900 dark:text-gray-100">Tech Stack</h3>
          
          <!-- Programming & Tools (skillicons.dev) -->
          <div>
            <p class="text-sm text-gray-500 dark:text-gray-400 mb-3 font-medium">Programming & Tools</p>
            <a href="https://skillicons.dev" target="_blank" rel="noopener noreferrer">
              <img 
                src={skillIconsUrl} 
                alt="Tech Stack Icons"
                class="h-10 sm:h-12 hidden dark:block"
              />
              <img 
                src={skillIconsUrlLight} 
                alt="Tech Stack Icons"
                class="h-10 sm:h-12 dark:hidden"
              />
            </a>
          </div>

          <!-- Speech/ML Frameworks -->
          <div>
            <p class="text-sm text-gray-500 dark:text-gray-400 mb-3 font-medium">Speech & ML Frameworks</p>
            <div class="flex flex-wrap gap-2">
              {
                siteConfig.speechTools.map((tool) => (
                  <span 
                    class="px-3 py-1.5 text-sm font-semibold rounded-md border-2 transition-all duration-200 hover:scale-105"
                    style={`border-color: ${siteConfig.accentColor}; color: ${siteConfig.accentColor}; background-color: ${siteConfig.accentColor}10`}
                  >
                    {tool}
                  </span>
                ))
              }
            </div>
          </div>
        </div>

        <!-- Research Areas Section -->
        <div class="pt-4">
          <h3 class="text-xl font-bold text-gray-900 dark:text-gray-100 mb-4">Research Interests</h3>
          <div class="space-y-4">
            {
              siteConfig.researchAreas.map((area) => (
                <div class="flex flex-wrap items-center gap-2">
                  <span 
                    class="px-3 py-1 text-sm font-bold text-white rounded-md min-w-[120px] text-center"
                    style={`background-color: ${siteConfig.accentColor}`}
                  >
                    {area.category}
                  </span>
                  <div class="flex flex-wrap gap-2">
                    {area.items.map((item) => (
                      <span class="px-3 py-1 bg-gray-100 dark:bg-slate-700 text-gray-700 dark:text-gray-300 rounded-full text-sm font-medium hover:bg-gray-200 dark:hover:bg-slate-600 transition-colors">
                        {item}
                      </span>
                    ))}
                  </div>
                </div>
              ))
            }
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
